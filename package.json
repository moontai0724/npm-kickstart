{
  "name": "npm-kickstart",
  "version": "0.0.0-development",
  "description": "A TypeScript NPM package kickstart template with ESLint, Prettier, and automated releases",
  "author": "moontai0724",
  "license": "MIT",
  "type": "module",
  "main": "./dist/bundle/index.cjs",
  "module": "./dist/bundle/index.js",
  "types": "./dist/bundle/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:bundle && pnpm run build:native",
    "build:bundle": "tsup",
    "build:native": "pnpm run build:native:esm && pnpm run build:native:cjs",
    "build:native:esm": "tsc -p tsconfig.esm.json",
    "build:native:cjs": "tsc -p tsconfig.cjs.json",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "docs:clean": "rm -rf docs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc -p src/tsconfig.json --noEmit",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "typescript",
    "eslint",
    "prettier",
    "template",
    "kickstart",
    "npm-package"
  ],
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.4"
  }
}
